{
    "dependencies": {
        "body-parser": "^1.19.0",
        "cookie-parser": "~1.4.3",
        "debug": "^4.3.2",
        "express": "^4.17.1",
        "fs-extra": "^10.0.0",
        "nedb": "~1.8.0",
        "pug": "^3.0.2"
    },
    "version": "0.0.1",
    "name": "@ssddi456/log_tailer",
    "files": [
        "output"
    ],
    "bin": {
        "log_tailer": "./output/bin/www"
    },
    "main": "output/index.js",
    "scripts": {
        "dev": "ts-node ./bin/www",
        "build": "(tsc || echo 0) && ts-node bin/build.ts",
        "prepublishOnly": "npm run build",
        "postversion": "npm publish",
        "postpublish": "git push --all origin && git push --tags origin"
    },
    "devDependencies": {
        "@types/body-parser": "^1.16.5",
        "@types/cookie-parser": "^1.4.1",
        "@types/express": "^4.0.37",
        "@types/fs-extra": "^4.0.2",
        "@types/jquery": "^3.2.12",
        "@types/nedb": "^1.8.3",
        "@types/node": "^8.0.29",
        "@types/requirejs": "^2.1.31",
        "nodemon": "^2.0.15",
        "ts-node": "^7.0.1"
    },
    "nodemonConfig": {
        "ext": "js,ts",
        "execMap": {
            "ts": "ts-node"
        },
        "ENV": {
            "DEBBUG": "log_tailer:*"
        },
        "watch": [
            "routes",
            "lib",
            "app.ts",
            "tsconfig.json"
        ]
    }
}
