{
    "dependencies": {
        "cookie-parser": "~1.4.3",
        "jade": "~1.11.0",
        "express": "~4.13.4",
        "body-parser": "~1.15.1",
        "debug": "~2.2.0",
        "nedb": "~1.8.0"
    },
    "version": "0.0.0",
    "name": "log_tailer",
    "private": true,
    "scripts": {
        "dev": "ts-node ./bin/www",
        "build": "tsc",
        "prepublish": "npm run build",
        "postversion": "npm publish",
        "postpublish": "git push --all origin && git push --tags origin"
    },
    "devDependencies": {
        "@types/body-parser": "^1.16.5",
        "@types/cookie-parser": "^1.4.1",
        "@types/express": "^4.0.37",
        "@types/fs-extra": "^4.0.2",
        "@types/jquery": "^3.2.12",
        "@types/nedb": "^1.8.3",
        "@types/node": "^8.0.29",
        "@types/requirejs": "^2.1.31"
    },
    "optionalDependencies": {
        "ts-node": "^7.0.1",
        "nodemon": "^1.18.4"
    },
    "nodemonConfig": {
        "ext": "js,ts",
        "execMap": {
            "ts": "ts-node"
        },
        "ENV": {
            "DEBBUG": "log_tailer:*"
        },
        "watch": [
            "routes",
            "lib",
            "app.ts",
            "tsconfig.json"
        ]
    }
}
